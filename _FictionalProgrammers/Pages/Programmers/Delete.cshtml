@page
@model _FictionalProgrammers.Pages.Programmers.DeleteModel


<form method="post">
    <input hidden asp-for="Programmer.Id" />
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Programmer</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Programmer.Id"></label>
            <input asp-for="Programmer.Id" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Programmer.FirstName"></label>
            <input asp-for="Programmer.FirstName" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Programmer.LastName"></label>
            <input asp-for="@Model.Programmer.LastName" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Programmer.Competence"></label>
            <input asp-for="@Model.Programmer.Competence" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Programmer.Projects"></label>
            <input asp-for="@Model.Programmer.Projects" disabled class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:159px;">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
