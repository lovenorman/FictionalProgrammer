@page
@model _FictionalProgrammers.Pages.Projects.DeleteModel

<form method="post">
    <input hidden asp-for="Project.Id" />
    <div class="border-bottom p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Project</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Project.Id"></label>
            <input asp-for="Project.Id" disabled class="form-control"/>
            
        </div>
        <div class="mb-3">
            <label asp-for="Project.Name"></label>
            <input asp-for="Project.Name" disabled class="form-control"/>
            
        </div>
        <div class="mb-3">
            <label asp-for="Project.CreatedDateTime"></label>
            <input asp-for="@Model.Project.CreatedDateTime" disabled class="form-control"/>
            
        </div>
        <div class="mb-3">
            <label asp-for="Project.EndDateTime"></label>
            <input asp-for="@Model.Project.EndDateTime" disabled class="form-control"/>
            
        </div>
        <div class="mb-3">
            <label asp-for="Project.Location"></label>
            <input asp-for="@Model.Project.Location" disabled class="form-control"/>
            
        </div>
        <div class="mb-3">
            <label asp-for="Project.Category"></label>
            <input asp-for="@Model.Project.Category" disabled class="form-control"/>
            
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px;">Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:159px;">Back To List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}